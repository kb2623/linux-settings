<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu>
	<menu id="client-menu">
		<menu id="workspaces" label="Workspace">
			<item label="1">
				<action name="SendToDesktop" to="1" follow="no" />
			</item>
			<item label="2">
				<action name="SendToDesktop" to="2" follow="no" />
			</item>
			<item label="3">
				<action name="SendToDesktop" to="3" follow="no" />
			</item>
			<item label="4">
				<action name="SendToDesktop" to="4" follow="no" />
			</item>
		</menu>
		<menu id="window" label="Window">
			<item label="Minimize">
				<action name="Iconify" />
			</item>
			<item label="Maximize">
				<action name="ToggleMaximize" />
			</item>
			<item label="Close">
				<action name="Close" />
			</item>
			<item label="Fullscreen">
				<action name="ToggleFullscreen" />
			</item>
			<item label="Roll up/down">
				<action name="ToggleShade" />
			</item>
			<item label="Decorations">
				<action name="ToggleDecorations" />
			</item>
			<item label="Always on Top">
				<action name="ToggleAlwaysOnTop" />
			</item>
		</menu>
	</menu>

	<menu id="root-menu">
		<item label="Web browser">
			<action name="Execute" command="firefox" />
		</item>
		<item label="Terminal">
			<action name="Execute" command="kitty" />
		</item>
		<item label="Files">
			<action name="Execute" command="pcmanfm-qt" />
		</item>
		<item label="Run">
			<action name="Execute" command="bemenu-run" />
		</item>
		<menu id="settings-menu" label="Settings">
			<item label="Audio">
				<action name="Execute" command="pavucontrol" />
			</item>
			<item label="Network">
				<action name="Execute" command="nm-connection-editor" />
			</item>
			<item label="Bluetooth">
				<action name="Execute" command="blueman-manager" />
			</item>
			<item label="Displays">
				<action name="Execute" command="wdisplays" />
			</item>
		</menu>
	</menu>

	<menu id="some-custom-menu">
		<separator label="LabWC" />
		<menu id="workspace-go" label="Workspace">
			<item label="1">
				<action name="GoToDesktop" to="1" />
			</item>
			<item label="2">
				<action name="GoToDesktop" to="2" />
			</item>
			<item label="3">
				<action name="GoToDesktop" to="3" />
			</item>
			<item label="4">
				<action name="GoToDesktop" to="4" />
			</item>
		</menu>
		<item label="Reconfigure">
			<action name="Reconfigure" />
		</item>
		<separator label="Session" />
		<item label='Lock'>
			<action name="Execute" command="swaylock -f -c 000000" />
		</item>
		<item label="Exit">
			<action name="Exit" />
		</item>
		<item label="Poweroff">
			<action name="Execute" command="systemctl -i poweroff" />
		</item>
	</menu>

</openbox_menu>
