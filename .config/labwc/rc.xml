<?xml version="1.0"?>

<!--
This is a very simple config file with many options missing. For a complete
set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

	<theme>
		<name>Nightmare</name>
		<cornerRadius>3</cornerRadius>
		<keepBorder>yes</keepBorder>
		<dropShadows>no</dropShadows>
		<font name="sans" size="10" />
	</theme>

	<desktops number="2">
		<names>
			<name>1</name>
			<name>2</name>
			<name>3</name>
			<name>4</name>
		</names>
	</desktops>

	<keyboard>
		<default />
		<keybind key="W-Return">
			<action name="Execute" command="kitty" />
		</keybind>
		<keybind key="W-l">
			<action name="GoToDesktop"><to>right</to></action>
		</keybind>
		<keybind key="W-h">
			<action name="GoToDesktop"><to>left</to></action>
		</keybind>
		<keybind key="W-j">
			<action name="NextWindow"></action>
		</keybind>
		<keybind key="W-k">
			<action name="PreviousWindow"></action>
		</keybind>
		<keybind key="W-A-F1">
			<action name="GoToDesktop"><to>1</to></action>
		</keybind>
		<keybind key="W-A-F2">
			<action name="GoToDesktop"><to>2</to></action>
		</keybind>
		<keybind key="W-r">
			<action name="Execute" command="bemenu-run" />
		</keybind>
	</keyboard>

	<mouse>
		<default />
		<!-- Show a custom menu on desktop right click -->
		<context name="Root">
			<mousebind button="Right" action="Press">
				<action name="ShowMenu" menu="some-custom-menu" />
			</mousebind>
		</context>

		<!-- time is in ms -->
		<doubleClickTime>500</doubleClickTime>

		<context name="Frame">
			<mousebind button="W-Left" action="Press">
				<action name="Focus" />
				<action name="Raise" />
			</mousebind>
			<mousebind button="W-Left" action="Drag">
				<action name="Move" />
			</mousebind>
			<mousebind button="W-Right" action="Press">
				<action name="Focus" />
				<action name="Raise" />
			</mousebind>
			<mousebind button="W-Right" action="Drag">
				<action name="Resize" />
			</mousebind>
		</context>
	</mouse>

</labwc_config>
